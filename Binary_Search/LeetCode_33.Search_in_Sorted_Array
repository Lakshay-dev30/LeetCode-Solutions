//Brute Force = Using Linear Search

//Optimal Approach
class Solution {
    public int search(int[] nums, int target) {
        int n = nums.length;
        int lo = 0;
        int hi = n-1;

        while(lo<=hi){
            int mid = lo + (hi-lo)/2;
            
            if(nums[mid] == target) return mid;
            
            //Left half Sorted
            if(nums[lo] <= nums[mid]){
                if(nums[lo] <= target && target <= nums[mid]){
                    hi = mid-1;
                }
                else{
                    lo = mid+1;
                }
            }
            //Right half Sorted
            else{
                if(nums[mid]<= target && target <= nums[hi]){
                    lo = mid+1;
                }
                else{
                    hi = mid-1;
                }
            }
        }
        return -1;
    }
}
//T.C = O(log n)
//S.C = O(1)
