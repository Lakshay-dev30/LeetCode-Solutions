//Optimal Approach
class Solution {
    public int peakIndexInMountainArray(int[] arr) {
        int lo = 0;
        int r = arr.length-1;

        while(lo < r){
            int mid = lo + (r-lo)/2;
            if(arr[mid] > arr[mid+1]){ //Decreasing Slope, Peek Index is present in left
                r = mid;
            }
            else{
                lo = mid+1;  //Increasing Slope, Peek Index in right side
            }
        } 
        return lo;
    }
}
//T.C = O(log n)
//S.C = O(1)
