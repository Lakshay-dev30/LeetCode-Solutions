//Brute Force
class Solution {
    public int[] searchRange(int[] nums, int target) {
        int n = nums.length;
        int[] ans = {-1,-1};

        //First Occurence
        for(int i=0;i<n;i++){
            if(nums[i] == target){
                ans[0] = i;
                break;
            }
        }

        //Last Occurence
        for(int i=n-1;i>=0;i--){
            if(nums[i] == target){
                ans[1] = i;
                break;
            }
        }

        return ans;
    }
}
//T.C = O(n)
//S.C = O(1)

//Optimal Approach
class Solution {
    public int[] searchRange(int[] nums, int target) {
        int n = nums.length;
        int lo = 0;
        int hi = n-1;
        int[] ans = {-1,-1};

        //First Occurrence
        while(lo <= hi){
            int mid = lo + (hi-lo)/2;
            if(nums[mid] >= target){
                hi = mid-1;
            }
            else{
                lo = mid+1;
            }
            if(nums[mid] == target) ans[0] = mid;
        }

        lo = 0;
        hi = n-1;

        //Last Occurrence
        while(lo<=hi){
            int mid = lo +(hi-lo)/2;
            if(nums[mid] <= target){
                lo = mid+1;
            }
            else{
                hi = mid-1;
            }
            if(nums[mid] == target) ans[1] = mid;
        }

        return ans;
    }
}
//T.C = O(log n)
//S.c = O(1)
