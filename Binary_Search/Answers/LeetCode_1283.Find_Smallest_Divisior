//Brute Force
class Solution {

    public boolean possible(int[] arr, int threshold, int d) {
        int sum = 0;

        for (int i = 0; i < arr.length; i++) {
            sum += Math.ceil((double) arr[i] / d);
        }

        return sum <= threshold;
    }

    public int smallestDivisor(int[] nums, int threshold) {
        int max = 0;
        for (int x : nums) {
            max = Math.max(max, x);
        }

        for (int d = 1; d <= max; d++) {
            if (possible(nums, threshold, d)) {
                return d;
            }
        }

        return -1;
    }
}
//T.C = O(N * max)
//S.C = O(1)

//Optimal Approach
class Solution {

    public int possible(int[] arr, int d) {
        int sum = 0;

        for (int i = 0; i < arr.length; i++) {
            sum += Math.ceil((double) arr[i] / d);
        }

        return sum;
    }

    public int smallestDivisor(int[] nums, int threshold) {
        int max = 0;
        for (int x : nums) {
            max = Math.max(max, x);
        }

        int lo = 1;
        int hi = max;
        int ans = max;

        while (lo <= hi) {
            int mid = lo + (hi - lo) / 2;
            int sum = possible(nums, mid);

            if (sum <= threshold) {
                ans = mid;        
                hi = mid - 1;
            } else {
                lo = mid + 1;
            }
        }
        return ans;
    }
}
//Time: O(n log max(nums))
//Space: O(1)
