//Brute Force
class Solution {
    public int searchInsert(int[] nums, int target) {
        int n = nums.length;
        int ans = n;
        for(int i=0;i<n;i++){
            if(nums[i] >= target){
                ans = i;
                return ans;
            }
        }
        return n;
    }
}
//T.C = O(n)
//S.C = O(1)

class Solution {
    public int searchInsert(int[] nums, int target) {
        int n = nums.length;
        int ans = n;
        int lo = 0;
        int hi = n-1;
        
        while(lo<=hi){
            int mid = lo + (hi-lo)/2;
            if(nums[mid] >= target){
                ans = Math.min(ans,mid);
                hi = mid-1;
            }
            else{
                lo = mid+1;
            }
        }
        return ans;
    }
}

//T.C = O(log n)
//S.C = O(1)
